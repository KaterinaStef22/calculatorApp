<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="214dp"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="-2dp"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:layout_marginBottom="0dp"
        android:text="7" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/btn9"
        android:layout_alignRight="@+id/btn9"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="203dp"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn6"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_toStartOf="@+id/btn7"
        android:layout_toLeftOf="@+id/btn7"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:text="4" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="+" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="149dp"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="-1dp"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="98dp"
        android:layout_marginRight="98dp"
        android:text="1" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignParentEnd="true"
        android:text="*"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/btn3"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="98dp"
        android:text="clear" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnclear"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/btn4"
        android:layout_toLeftOf="@+id/btn4"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnclear"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="3dp"
        android:layout_toStartOf="@+id/btnadd"
        android:layout_toLeftOf="@+id/btnadd"
        android:text="=" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/btnclear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:text="-" />

    <TextView
        android:id="@+id/tvResults"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-356dp"
        android:layout_marginLeft="-236dp"
        android:layout_marginTop="41dp"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:text="Results" />

    <TextView
        android:id="@+id/tvControl"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/btnadd"
        android:layout_alignLeft="@+id/btnadd"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-274dp"
        android:layout_marginLeft="-274dp"
        android:layout_marginTop="98dp"
        android:text="Control" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:text="/"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp" />

</RelativeLayout>